@model BtlJobFinderVT.Areas.Admin.Models.LoginViewModel
@{
    ViewData["Title"] = "Login";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayoutLogin.cshtml";
}

<form asp-area="Admin" asp-controller="TaiKhoans" asp-action="Login" method="post">
    <div class="signin-box">
        <h2 class="slim-logo"><a href="/">Job<span>.</span></a></h2>
        <h2 class="signin-title-primary">Welcome back</h2>
        <h3 class="signin-title-secondary">Sign in to continue.</h3>
        <div class="form-group">
            <input type="text" class="form-control" asp-for="Email" placeholder="Enter your mail" />
        </div>
        <div class="form-group mg-b-50">
            <input type="password" class="form-control" asp-for="Password" placeholder="Enter your password" />
        </div>
        <button class="btn btn-primary btn-block btn-signin">Đăng nhập</button>
        <p class="mg-b-0">Chưa có tài khoản?<a href=""</p>
    </div>
</form>

